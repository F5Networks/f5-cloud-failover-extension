{
    "class": "Device",
    "schemaVersion": "1.0.0",
    "async": true,
    "label": "BIG-IP declaration for declarative onboarding",
    "Common": {
        "class": "Tenant",
        "hostname": "${hostname}",
        "myDns": {
            "class": "DNS",
            "nameServers": [
                "8.8.8.8"
            ],
            "search": [
                "f5.com"
            ]
        },
        "myNtp": {
            "class": "NTP",
            "servers": [
                "0.pool.ntp.org",
                "1.pool.ntp.org"
            ],
            "timezone": "UTC"
        },
        "myProvisioning": {
            "class": "Provision",
            "ltm": "nominal"
        },
        "configsync": {
            "class": "ConfigSync",
            "configsyncIp": "${internal_self_ip}"
        },
        "failoverAddress": {
            "class": "FailoverUnicast",
            "address": "${internal_self_ip}"
        },
        "failoverGroup": {
            "class": "DeviceGroup",
            "type": "sync-failover",
            "members": ["${host01}", "${host02}"],
            "owner": "/Common/failoverGroup/members/0",
            "autoSync": true,
            "saveOnAutoSync": false,
            "networkFailover": true,
            "fullLoadOnSync": false,
            "asmSync": false
        },
        "trust": {
            "class": "DeviceTrust",
            "localUsername": "azureuser",
            "localPassword": "${admin_password}",
            "remoteHost": "${remote_mgmt_private_ip}",
            "remoteUsername": "azureuser",
            "remotePassword": "${admin_password}"
        }
    }
}
