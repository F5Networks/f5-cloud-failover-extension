{
    "class": "Device",
    "schemaVersion": "1.0.0",
    "async": true,
    "label": "Azure 1nic declarative onboarding",
    "Common": {
        "class": "Tenant",
        "hostname": "${hostname}",
        "myDns": {
            "class": "DNS",
            "nameServers": [
                "8.8.8.8"
            ],
            "search": [
                "f5.com"
            ]
        },
        "myNtp": {
            "class": "NTP",
            "servers": [
                "0.pool.ntp.org",
                "1.pool.ntp.org"
            ],
            "timezone": "UTC"
        },
        "${admin_username}": {
            "class": "User",
            "userType": "regular",
            "password": "${admin_password}",
            "shell": "bash"
        },
        "myProvisioning": {
            "class": "Provision",
            "ltm": "nominal"
        },
        "internal": {
            "class": "VLAN",
            "tag": 4094,
            "mtu": 1500,
            "interfaces": [
                {
                    "name": "1.0",
                    "tagged": false
                }
            ]
        },
        "self_1nic": {
            "class": "SelfIp",
            "address": "${remote_host}/24",
            "vlan": "internal",
            "allowService": "default",
            "trafficGroup": "traffic-group-local-only"
        },
        "configSync": {
            "class": "ConfigSync",
            "configsyncIp": "/Common/self_1nic/address"
        },
        "failoverAddress": {
            "class": "FailoverUnicast",
            "address": "/Common/self_1nic/address"
        },
        "failoverGroup": {
            "class": "DeviceGroup",
            "type": "sync-failover",
            "members": ["failover0.local", "failover1.local"],
            "owner": "/Common/failoverGroup/members/0",
            "autoSync": true,
            "saveOnAutoSync": false,
            "networkFailover": true,
            "fullLoadOnSync": false,
            "asmSync": false
        },
        "trust": {
            "class": "DeviceTrust",
            "localUsername": "${admin_username}",
            "localPassword": "${admin_password}",
            "remoteHost": "${remote_host}",
            "remoteUsername": "${admin_username}",
            "remotePassword": "${admin_password}"
        },
        "dbVars": {
        	"class": "DbVariables",
            "config.allow.rfc3927": "enable",
            "configsync.allowmanagement": "enable",
            "provision.1nicautoconfig": "disable",
            "provision.1nic": "forced_enable"
        },
        "default": {
            "class": "ManagementRoute",
            "gw": "10.0.0.1"
        },
        "systemSettings": {
            "class": "System",
            "autoPhonehome": false
        }
    }
}
