{
    "$id": "failover_schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cloud Failover",
    "description": "Schema for triggering cloud failover for BIG-IP",
    "type": "object",
    "allOf": [
        {
            "if": { "properties": { "class": { "const": "Failover" } } },
            "then": {
                "required": ["class", "environment"],
                "properties": {
                    "class": {
                        "title": "Class",
                        "description": "Indicates that this property contains failover trigger configuration.",
                        "type": "string",
                        "enum": [ "Failover" ]
                    },
                    "environment": {
                        "$ref": "base_schema.json#/definitions/environment"
                    }
                },
                "additionalProperties": false
            }
        }
    ]
}